<x2 namespace="x2.Links.SocketLink">

    <consts name="SocketLinkEventType">
        <const name="HandshakeReq">-10</const>
        <const name="HandshakeResp">-11</const>
        <const name="HandshakeAck">-12</const>

        <const name="KeepaliveEvent">-20</const>
        <const name="KeepaliveTick">-21</const>

        <const name="SessionReq">-30</const>
        <const name="SessionResp">-31</const>
        <const name="SessionAck">-32</const>
        <!-- we need an active close notification here -->
    </consts>

    <event name="HandshakeReq" id="SocketLinkEventType.HandshakeReq">
        <property name="Data" type="bytes"/>
    </event>
    <event name="HandshakeResp" id="SocketLinkEventType.HandshakeResp">
        <property name="Data" type="bytes"/>
    </event>
    <event name="HandshakeAck" id="SocketLinkEventType.HandshakeAck">
        <property name="Result" type="bool"/>
    </event>

    <event name="KeepaliveEvent" id="SocketLinkEventType.KeepaliveEvent">
    </event>
    <event name="KeepaliveTick" id="SocketLinkEventType.KeepaliveTick">
        <property name="LinkName" type="string"/>
    </event>

    <event name="SessionReq" id="SocketLinkEventType.SessionReq">
        <property name="Value" type="string"/>
    </event>
    <event name="SessionResp" id="SocketLinkEventType.SessionResp">
        <property name="Value" type="string"/>
    </event>
    <event name="SessionAck" id="SocketLinkEventType.SessionAck">
    </event>

</x2>